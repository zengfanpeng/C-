#include <iostream>
#include <string>
using namespace std;

class person{
    friend person operator+ (person&p,person&p2);
private:
    int age;
protected:
    string name;
public:
    person(string name,int age){
        this->name=name;
        this->age=age;
    }
    person();
    void setAge(int age){
        this->age=age;
    }
    int getAge(){
        return age;
    }
    void setName(string name){
        this->name=name;
    }
    string getName(){
        return name;
    }
};
person operator+ (person&p1,person&p2){
 person temp;
 temp.age=p1.age+p2.age;
 temp.name=p1.name+p2.name;
    return temp;
}

person::person() {

}

void test(){
    person p1;
    person*p=&p1;
    p->setAge(20);
    p->setName("朱雁");
    person p2;
    p2.setName("曾宇菲");
    p2.setAge(21);
    person p3;
    p3=p1+p2;
    cout<<p3.getAge()<<endl;
    cout<<p3.getName()<<endl;

}
int main(){
    test();
    system("pause");
    return 0;
}
