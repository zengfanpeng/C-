#include <iostream>
using namespace std;
void bubble(int *arr,int len){
    for (int i = 0; i < len-1; i++)
    {
        for(int j=0;j<len-i-1;j++){
            if(arr[j+1]<arr[j]){
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
    
}

void print(int *arr,int len){
   for(int i=0;i<=len-1;i++){
       cout<<arr[i]<<endl;
   }
}
int main(){
    //定义一个数组
    int arr[]={6,5,7,3,8,2,9,0,1,4};
    int len=sizeof(arr)/sizeof(arr[0]);
    //调用方法
    bubble(arr,len);
    //输出
    print(arr,len);
    return 0;
    system("pause");
}
